div class="modal fade" id="modal_study_settings"
  div class="modal-dialog" role="document"
    div class="modal-content"
      div class="modal-header"
        h5 class="modal-title" Edit Study Title
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true" &times;
      form id="form_settings" method="post"
        div class="modal-body"
          div class="form-group"
            label for="title" Study Title
            input type="text" class="form-control" id="input-title" name="title" placeholder="Enter study title"
        div class="modal-footer"
          button type="button" class="btn btn-secondary" data-dismiss="modal" Close
          button type="submit" class="btn btn-primary" id="btn-save-settings" Save

javascript:
  $('#modal_study_settings').on('show.bs.modal', function(e) {
    var study_id = $(e.relatedTarget).data('study_id');
    var study_title = $(e.relatedTarget).data('study_title');
    $('#form_settings').attr('action', '/study/' + study_id + '/update_settings');
    $('#input-title').val(study_title);
  });